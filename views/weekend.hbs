<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>It's Week-end!</title>
  </head>
  <style>
    body { text-align: center; background-color:
    {{{color}}}
    ; display: grid; place-items: center; font-family: 'Comic Sans MS'; } h1 {
    font-size: 5rem; color: #2d3a45; margin-bottom: 2rem; } p { font-size: 2rem;
    color: #2d3a45; margin-bottom: 3rem; } img { } canvas { position: fixed;
    top: 0; left: 0; width: 100%; height: 100%; z-index: -1; }
  </style>

  <body>
    <h1>{{title}}</h1>
    <p>{{text}}</p>
    <canvas id='confetti'></canvas>
    <img src='{{gif}}' alt='Funny img' width='500' />
    <script
      src='https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js'
    ></script>
    <script>
      const jsConfetti = new JSConfetti(); function add() {
      jsConfetti.addConfetti({ emojis:
      {{{JSONstringify emojis}}}, emojiSize: 150, confettiNumber: 50, }); }
      add(); setInterval(() => add(), 2000);
    </script>
  </body>

</html>